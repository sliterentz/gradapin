{
  "name": "gradapin",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=api && turbo build --filter=web",
    "build:api": "turbo build --filter=api",
    "build:web": "turbo build --filter=web",
    "build:docs": "turbo build --filter=docs",
    "start:debug": "turbo dev --filter=api",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.13.4",
    "prettier": "^3.5.0",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "@nestjs/common@>=11.0.0-next.1 <11.0.16": ">=11.0.16",
      "@babel/runtime-corejs3@<7.26.10": ">=7.26.10",
      "@babel/runtime@<7.26.10": ">=7.26.10",
      "@babel/helpers@<7.26.10": ">=7.26.10",
      "formidable@>=3.1.1-canary.20211030 <3.5.3": ">=3.5.3",
      "brace-expansion@>=1.0.0 <=1.1.11": ">=1.1.12",
      "brace-expansion@>=2.0.0 <=2.0.1": ">=2.0.2",
      "next@>=15.0.0 <15.2.2": ">=15.2.2",
      "next@>=15.0.4-canary.51 <15.1.8": ">=15.1.8",
      "@eslint/plugin-kit@<0.3.4": ">=0.3.4",
      "next@>=15.0.0 <=15.4.4": ">=15.4.5",
      "next@>=15.0.0-canary.0 <15.4.7": ">=15.4.7",
      "axios@>=1.0.0 <1.12.0": ">=1.12.0",
      "next@>=15.0.0 <15.2.3": ">=15.2.3",
      "validator@<13.15.20": ">=13.15.20",
      "tmp@<=0.2.3": ">=0.2.4",
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4",
      "js-yaml@<3.14.2": ">=3.14.2",
      "js-yaml@<4.1.1": ">=4.1.1",
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "glob@<11.1.0": ">=11.1.0",
      "axios@>=1.0.0 <1.8.2": ">=1.8.2",
      "validator@<13.15.22": ">=13.15.22",
      "next@>=15.1.0-canary.0 <15.1.9": ">=15.1.9"
    }
  }
}
